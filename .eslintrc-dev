{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jquery": true
  },
  "extends" : [
    "standard",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "rules": {
    "arrow-parens": 1,
    "no-multi-spaces": 1,
    "key-spacing": 1,
    "no-unused-vars": 1,
    "no-undef": 1,
    "indent": 1,
    "no-console": 1,
    "no-new": 1,
    "object-curly-spacing": 1,
    "arrow-body-style": [2, "as-needed"],
    "no-param-reassign": [2, { "props" : false }],
    "func-names": 01,
    "space-before-function-paren": 1
  }
}
